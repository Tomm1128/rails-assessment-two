<h2><%= @vendor.name %></h2>
<h3>All sweets</h3>
<ul>
  <% @vendor.sweets.each do |sweet| %>
    <li><%= sweet.name %></li>
    <ul>
      <li><%= sweet.sweet_comment(@vendor.id) %></li>
    </ul>
  <% end %>
</ul>

<%= form_for @vendor_sweet, url: vendor_sweets_path do |f|%>
  <% if @vendor_sweet.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@vendor_sweet.errors.count, "error") %> prohibited this association from being saved:</h2>

      <ul>
        <% @vendor_sweet.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :sweets %><br>
    <%= f.collection_select :sweet_id, @sweets, :id, :name %><br>
  </div>

  <div class="field">
    <%= f.label :comment %>
    <%= f.text_field :comment %>
  </div>

    <%= f.hidden_field :vendor_id, value: @vendor.id %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
